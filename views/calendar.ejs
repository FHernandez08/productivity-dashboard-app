<body>
    <header>
        <%- include('partials/header.ejs') %>
    </header>

    <main>
        <div class="container py-4">
            <div class="row">
                <div class="col-12">
                    <h1 class="h3 text-center text-md-start mb-0">Your Personal Calendar</h1>
                </div>
                <div class="col-12 col-lg-8">
                    <div id="calendar" class="fc-box rounded shadow-sm p-2"></div>
                </div>
                <div class="col-12 col-lg-4">
                    <div id="important-dates" class="fc-box rounded shadow-sm p-2"></div>
                </div>
            </div>
        </div>
    </main>

    <footer>
        <%- include('partials/footer.ejs') %>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/routes/calendar.js"></script>

