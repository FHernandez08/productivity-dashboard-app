<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/calendar.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/f489890540.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.19/index.global.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const calendarEl = document.getElementById('calendar');
            const calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth'
            });
            calendar.render();
        })
    </script>
</head>

<body>
    <header>
        <%- include('partials/header.ejs') %>
    </header>

    <main>
        <div class="container py-4">
            <div class="calendar-layout">
                <!-- Row 1 -->
                <div class="calendar-header">
                    <h1>
                        Your personal calendar
                    </h1>
                </div>
            
                <!-- Row 2 -->
                <div class="monthly-calendar" id="calendar"></div>
            
                <!-- Row 3 -->
                <div class="important-dates mt-4" id="important-dates"></div>
                </div>
        </div>
    </main>

    <footer>
        <%- include('partials/footer.ejs') %>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/routes/calendar.js"></script>

</body>

</html>