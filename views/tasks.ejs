<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/tasks.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/f489890540.js" crossorigin="anonymous"></script>
</head>

<body>
    <header>
        <%- include('partials/header.ejs') %>
    </header>

    <main>
        <div class="container py-4">
            <div class="tasks-layout">
                <!-- Row 1 -->
                <div class="task-header">
                    <h1>Current Tasks</h1>
                </div>
                <div class="add-task">
                    <button id="add-task-btn" class="btn btn-light"><i class="fa-solid fa-plus"></i></button>
                </div>
            
                <!--Row 2 & Row 3 = the tasks table will span for the whole width-->
                <div class="tasks-main">
                    <table class="table table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Task name</th>
                                <th scope="col">Category</th>
                                <th scope="col">Due Date</th>
                                <th scope="col">Status</th>
                            </tr>
                        </thead>
                        <tbody>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div id="new-task-form-wrapper" class="container d-flex align-items-center justify-content-center vh-100">
            <form action="task-entry" method="post" id="new-task-form">
            <p>Enter the following details to create a new event!</p>

            <div id="task-form-name" class="mb-3">
                <label for="name-detail" class="form-label">Task Name</label>
                <input type="text" name="task-name-detail" id="name-detail">
            </div>
            <div id="task-category-name" class="mb-3">
                <label for="category-detail" class="form-label">Category</label>
                <input type="text" name="task-category-detail" id="category-detail">
            </div>
            <div id="task-dueDate" class="mb-3">
                <label for="dueDate-detail" class="form-label">Due Date</label>
                <input type="datetime-local" name="task-dueDate-detail" id="dueDate-detail">
            </div>
            <div id="task-status" class="mb-3">
                <label for="status-detail" class="form-label">Status</label>
                <select name="task-status-detail" id="status-detail">
                    <option value="" selected>--Please choose an option--</option>
                    <option value="not started">Not Started</option>
                    <option value="in progress">In Progress</option>
                    <option value="completed">Completed</option>
                    <option value="blocked">Blocked</option>
                </select>
            </div>

            <div id="register-buttons" class="d-flex justify-content-center gap-3 mt-3">
                <button type="reset" id="task-clear" class="btn btn-secondary">Clear</button>
                <button type="submit" id="task-submit" class="btn btn-success">Submit</button>
            </div>
        </form>
    </div>
</main>

    <footer>
        <%- include('partials/footer.ejs') %>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/public/js/buttons.js"></script>
</body>

</html>